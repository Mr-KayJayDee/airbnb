<div class="border border-dark text-center my-2 p-2">
    <p><%= @car.id %></p>
    <p><%= @car.brand %></p>
    <p><%= @car.model %></p>
    <p><%= @car.price_per_day %></p>
    <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill, class: "img-fluid rounded" %>
</div>
<%= link_to 'Book this car', new_car_booking_path(@car), class:"btn btn-primary" %>
<%= yield(@car) if block_given? %>
<%= link_to 'Back', cars_path, class:"btn btn-secondary" %>