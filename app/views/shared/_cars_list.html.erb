<div class="row">
  <% @cars.each do |car| %>
    <div class="col-md-3 my-4">
      <%= link_to car_path(car), style: 'color: inherit; text-decoration: none;' do %>
        <div class="d-flex justify-content-between flex-column rounded-4">
          <%= cl_image_tag car.photo.key, height: 200, width: 300, crop: :fill, class: "img-fluid rounded-4 w-100" %>
          <p class="fs-4 mb-0 fw-medium"><span class="fw-bold"><%= car.brand %></span></p>
          <p class="mb-0"><%= car.model %></p>
          <p class="fs-6 mb-0"><strong><%= number_with_delimiter(car.price_per_day, delimiter: ',', separator: '.') %>$</strong>/day</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>